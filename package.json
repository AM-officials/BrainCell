    "@tensorflow/tfjs": "^4.20.0",
    "axios": "^1.7.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.11",
    "lucide-react": "^0.394.0",
    "mermaid": "^10.9.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.9.4",
    "reactflow": "^11.11.3",
    "recordrtc": "^5.6.2",
